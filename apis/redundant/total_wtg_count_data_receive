const express = require('express');
const odbc = require('odbc');
const fs = require('fs');
const path = require('path');
const { connectToDatabase } = require('./connect.js'); // Ensure you have this connection string in the 'connect.js' file.
const router = express.Router();

// Set up CORS middleware
router.use((req, res, next) => {
    res.header('Access-Control-Allow-Origin', '*');
    res.header('Access-Control-Allow-Methods', 'POST, GET, OPTIONS');
    res.header('Access-Control-Allow-Headers', 'Content-Type, Authorization');
    res.header('Access-Control-Allow-Credentials', 'true');
    res.header('Access-Control-Max-Age', '3600');
    next();
});

// Middleware to parse JSON bodies
router.use(express.json());

// Route to handle GET request and save to JSON file
router.get('/', async (req, res) => {
    // Extract parameters from query
    const { orderType, fromDate, toDate, state, area, site } = req.query;

    // Create data object to save
    const dataToSave = {
        orderType,
        fromDate,
        toDate,
        state,
        area,
        site
    };

    // Define the path for the JSON file
    const filePath = path.join(__dirname, 'total_wtg_count_fetch_data.json');

    // Write the data to the JSON file
    fs.writeFile(filePath, JSON.stringify(dataToSave, null, 2), (err) => {
        if (err) {
            console.error('Error writing to JSON file:', err);
            return res.status(500).json({ message: 'Failed to save data to JSON file.' });
        }
        console.log('Data successfully saved to total_wtg_count_fetch_data.json');
        return res.status(200).json({ message: 'Data saved successfully', data: dataToSave });
    });
});

// Export the router
module.exports = router;
